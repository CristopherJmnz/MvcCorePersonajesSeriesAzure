@model IEnumerable<MvcCorePersonajesSeriesAzure.Models.PersonajesSeries>

@{
    ViewData["Title"] = "Buscador";
}

<h1>Buscador</h1>

<form method="post" class="mb-3">
    <select name="serie"> 
        @foreach(string serie in ViewData["SERIES"]as List<string>)
        {
            <option value="@serie">@serie</option>
        }
    </select>
    <button class="btn btn-primary">BUSCAR</button>
</form>
@if (Model!=null)
{
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPersonaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPersonaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <img src="@item.Imagen" width="150" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Serie)
                </td>
            </tr>
        }
    </tbody>
    </table>
}
else
{
    <p>NO HAY PERSONAJES</p>
}